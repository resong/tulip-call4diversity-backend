{
  "name": "bridge-node-starter",
  "version": "0.0.0",
  "description": "Node server starter",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "dev": "nodemon src/index.js",
    "test:watch": "jest --watch"
  },
  "authors": [
    "Robyn Dalgleish",
    "Cheyenne Arrowsmith",
    "Rebecca Song",
    "Tyn Soltys",
    "Quinn Anderson",
    "M.K. Reyes"
  ],
  "devDependencies": {
    "jest": "^22.4.4",
    "nodemon": "^1.17.5",
    "supertest": "^3.1.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "firebase-admin": "^5.12.1",
    "morgan": "^1.9.0",
    "winston": "^3.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.js",
      "**/*.spec.js",
      ".git",
      "node_modules"
    ]
  },
  "jest": {
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js)$",
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testURL": "http://localhost/"
  }
}
